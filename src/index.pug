	h2 No streaming
	ul.inline-list
		- for (thing of [...trakt.watched.shows, ...trakt.watched.movies].sort((a, b) => new Date(b.last_watched_at).valueOf() - new Date(a.last_watched_at).valueOf()).slice(0, 10))
			li #[a(href=thing.url)= thing.data.title]
