{% macro nav_link(href, text, exact = false) %}
    {% set exactCurrent = href == page.url %}
    {% set nonExactCurrent = page
        .url
        .startsWith(href) %}
    <a
        {% if exactCurrent or (not exact and nonExactCurrent) %}
        class="current"
        {% endif %}
        {% if exactCurrent %}
        aria-current="page"
        {% endif %}
        href="{{ href }}"
    >
        {{ text }}
    </a>
{% endmacro %}

