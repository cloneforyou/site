---
layout: default
mainClass: entry
htmlClass: h-entry
---

{% extends 'templates/entry.njk' %}

{% block body_start %}
    {% for link in invisibleLinks %}
        <a href="{{ link }}"></a>
    {% endfor %}

    {% for link in links %}
        <aside class="wm-properties">
            {% set wmTypes = link.types | wmTypeStrings %}

            {% for connective, types in wmTypes | groupby('connective') %}
                <span class="wm-property">
                    {% for type in types %}
                        <span class="wm-property">{{ type.singular }}</span>
                    {% endfor %}
                    {{ connective }}
                </span>
            {% endfor %}

            {% set typeClasses %}
            {% for type in link.types %} u-{{type}}
            {% endfor %}
            {% endset %}

            <a href="{{ link.link }}" class="{{ typeClasses }}">{{ title }}</a>
        </aside>
    {% endfor %}
{% endblock %}