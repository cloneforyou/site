---
layout: default
mainClass: entry
htmlClass: h-entry
---

{% extends 'templates/entry.njk' %}

{% set syndicationContent %}
{% for link in syndicationLinks %}
    <a href="{{ link }}"></a>
{% endfor %}
{% endset %}

{% set wmContent %}
{% for link in links %}
    {% set wmTypes = link.types | wmTypeStrings %}

    {% for connective, types in wmTypes | groupby('connective') %}
        <span class="wm-property">
            {% for type in types %}
                <span class="wm-property">{{ type.singular }}</span>
            {% endfor %}
            {{ connective }}
        </span>
    {% endfor %}

    {% set typeClasses %}
    {% for type in link.types %} u-{{type}}
    {% endfor %}
    {% endset %}

    <a href="{{ link.link }}" class="{{ typeClasses }}">{{ title }}</a>
{% endfor %}
{% endset %}

{% set bodyStartContent %}
{{ syndicationContent | safe }}

{% if wmContent | trim | length > 0 %}
    <aside class="wm-properties">{{ wmContent | safe }}</aside>
{% endif %}
{% endset %}

{% if bodyStartContent | trim | length > 0 %}
    {% block body_start %}
        {{ bodyStartContent | safe }}
    {% endblock %}
{% endif %}